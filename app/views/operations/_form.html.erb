<%= form_with model: @operation, url: operations_path do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :groups, style: "display: block" %>
    <%= form.collection_check_boxes(:group_ids, @client.groups, :id, :name) %>
  </div>

  <div>
    <%= form.submit 'Save' %>
  </div>
<% end %>
