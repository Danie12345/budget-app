<%= form_with model: @operation, url: operations_path do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.hidden_field :author_id, value: @client.id %>
  </div>

  <div>
    <%= form.label :group_id, style: "display: block" %>
    <%= form.collection_select :group_id, @client.groups || [], :id, :name, include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
